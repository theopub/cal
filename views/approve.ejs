<html>
    <head>
        <title>Red Ed.</title>
     

        <link rel="icon" type="image/png" href="/cal.png" />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />


        <style>
    body {
                    font-family: Helvetica, sans-serif; 
        background-color: rgb(101, 0, 0);
        font-size: 15px;
      }

      .poster-inline {
        position: relative; 
        width: 3vw;
        float: left;
        box-shadow: 0px 3px 3px 3px rgb(202, 0, 0);
        transition: width 1s; 
      }

      .poster-inline:hover {
        width: 30vw;
      }


      a {
        color: black;
      }

      #menu {
        position: fixed;
        bottom: 0;
        padding: 2vw;
        width: 210px;
        right: 0;
      }

      .date,
      #menu,
      .more-info,
      .close,
      #about, table {
        background-color: rgb(252, 83, 83);
        color: rgb(71, 0, 0);
        box-shadow: 0px 3px 12px 3px rgb(120, 0, 0);
        z-index: 10;
      }

      table, th, td {
        border: 1px solid;
        }

      @media only screen and (max-width: 750px) {
                .more-info, #about {
                    left: 3vw; 
                    width: 92.3vw; 
                }

                .notmobile{
                    display: none; 
                }

                #menu {
                    width: 96vw; 
                    right: none; 
                    left: 0; 
                }


                .mobileonly {
                  display: inline; 
                }


            }


        </style>
    </head>
    <body>
        <table>
            <tr>
                <th>contact</th>
                <th>img</th>
                <th>title</th>
                <th>cost</th>
                <th>when</th>
                <th>where</th>
                <th>categories</th>
                <th>described</th>
                <th>link</th>
                <th>actions</th>
            </tr>
        
            <% e.forEach((event)=>{ %>
                <tr>
                    <td><%=event.owner_name %>, [email], [url]</td>
                    <td><img class="poster-inline" src="<%= event.image_url%>"/></td>
                    <td><%=event.name %></td>
                    <td><%=event.cost %></td>
                    <td><%=event.start_date %></td>
                    <td><%=event.location %></td>
                    <td><%=event.tags %></td>
                    <td>
                        <% if (event.description) { %>
                            <span class="linebreaks"><%= event.description%></span>
                          <% } %>
                    </td>
                    <td>
                        <% if (event.event_url) { %>
                            <a href="<%= event.event_url %>">
                              <%= event.event_url_text || "Link" %>
                            </a>
                          <% } %>
    
                    </td>
                 
                    <td>
                        <form method="GET" action="/approve">
                            <input type="hidden" name="id" value="<%=event.id%>">
                            <input type="submit" value="approve">
                        </form>
                        <!-- <form method="POST" action="/remove">
                            <input type="hidden" name="id" value="<%=event.id%>">
                            <input type="submit" value="remove">
                        </form> -->
                    </td>

           

                </tr>
                <% }) %>

                </table>
    

        <div id="menu">
            <a href="/add">Add another event.</a>
            <span class="notmobile"><br /><br /></span>
            <span class="mobileonly">~~~</span>
            <a href="/">Back to Calendar.</a>

        </div>

        </tbody>
    </table>
    </body>
</html>